<div class="container">
  <section class="FormWrapper">
    <div class="mb-5">
      <%= link_to raw("<svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' class='bi bi-arrow-left' viewBox='0 0 16 16'>
        <path fill-rule='evenodd' d='M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8'/>
        </svg> 一覧に戻る"), schedules_path, class: "Link Link--with-icon" %>
    </div>

    <div class="mb-5 TitleWrapper">
      <h3><%= @schedule.title %></h3>
      <div>
        <%= link_to "編集", edit_schedule_path(@schedule), class: "btn Button Button--primary" %>
      </div>
    </div>

    <table class="table DetailTable">
      <tbody>
        <tr>
          <th>開始日</th>
          <td><%= @schedule.start_date.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>終了日</th>
          <td><%= @schedule.end_date.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>終日</th>
          <td><%= @schedule.all_day ? "○" : "" %></td>
        </tr>
        <tr>
          <th>メモ</th>
          <td><%= @schedule.memo.presence || "なし" %></td>
        </tr>
      </tbody>
    </table>
  </section>
</div>
